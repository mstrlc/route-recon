{
    "manifest_version": 3,
    "name": "Strava More Maps",
    "version": "1.0",
    "description": "Adds additional map options to Strava.",
    "browser_specific_settings": {
        "gecko": {
            "id": "strava-more-maps@mstrlc.eu"
        }
    },
    "icons": {
        "48": "icons/border-48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.strava.com/*"
            ],
            "js": [
                "browser-polyfill.js",
                "map-modifier.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "constants.js",
                "strings.js",
                "inject.js",
                "panorama.js",
                "assets/mapycom/*",
                "assets/osm/*",
                "icons/*"
            ],
            "matches": [
                "*://*.strava.com/*"
            ]
        }
    ]
}